{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug NestJS",
		"type": "pwa-node",
		"request": "launch",
		"runtimeArgs": [
		  "--nolazy",
		  "-r",
		  "ts-node/register",
		  "-r",
		  "tsconfig-paths/register"
		],
		"args": ["${workspaceFolder}/src/main.ts"],
		"sourceMaps": true,
		"cwd": "${workspaceFolder}",
		"protocol": "inspector",
		"skipFiles": ["<node_internals>/**"],
		"envFile": "${workspaceFolder}/.env",
		"outFiles": ["${workspaceFolder}/dist/**/*.js"],
		"autoAttachChildProcesses": true
	  }
	]
  }
  